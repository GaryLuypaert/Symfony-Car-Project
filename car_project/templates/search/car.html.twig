{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <h2>Recherche avancée</h2>
        <div class="row">
            <div class="col-sm-12">
                {{ form(search_form) }}
            </div>
        </div>

        {% if app.request.method == 'POST' %}
        <div class="row">
            {% if cars|length == 0 %}
                <h2>Aucuns résultats</h2>
            {% else %}
            <div class="col-sm-12">
                <h2>Résultats de la recherche :</h2>

                {% for car in cars %}
                    <a href="{{ path('car_page', {id:car.id}) }}">{{ car.model }}</a>
                {% endfor %}

            {% endif %}
            </div>
        </div>
        {% endif %}

    </div>

{% endblock body %}